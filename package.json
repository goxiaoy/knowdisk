{
	"name": "knowdisk",
	"version": "1.0.0",
	"description": "Know Disk desktop app",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "LOG_LEVEL=debug bun run build && LOG_LEVEL=debug electrobun dev",
		"dev:hmr": "LOG_LEVEL=debug concurrently \"LOG_LEVEL=debug bun run hmr\" \"LOG_LEVEL=debug bun run dev\"",
		"hmr": "vite --port 5173",
		"build": "vite build && electrobun build",
		"build:prod": "vite build && electrobun build --channel prod",
		"start": "bun run dev",
		"test": "bun test",
		"vfs:example": "bun run --cwd packages/vfs example"
	},
	"dependencies": {
		"@knowdisk/vfs": "workspace:*",
		"@huggingface/transformers": "^3.8.1",
		"@modelcontextprotocol/sdk": "^1.26.0",
		"@zvec/zvec": "^0.2.0",
		"aws-sdk": "^2.1693.0",
		"chokidar": "^5.0.0",
		"electrobun": "1.13.1",
		"mock-aws-s3": "^4.0.2",
		"nock": "^14.0.11",
		"nodejieba": "^3.5.2",
		"pino": "^10.3.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"reflect-metadata": "^0.2.2",
		"tsyringe": "^4.10.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@types/react-test-renderer": "^19.1.0",
		"@vitejs/plugin-react": "^4.3.4",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.1.0",
		"postcss": "^8.4.49",
		"react-test-renderer": "18.3.1",
		"tailwindcss": "^3.4.16",
		"typescript": "^5.7.2",
		"vite": "^6.0.3"
	}
}
